<?xml version="1.0" encoding="UTF-8"?>
<project name="Stock_Management_System" default="default" basedir="." xmlns:fx="javafx:com.sun.javafx.tools.ant">

    <description>Builds, tests, and runs the project Stock_Management_System.</description>
    <import file="nbproject/build-impl.xml"/>

    <!-- ðŸ”Œ Custom classpath to include PostgreSQL JDBC driver -->
    <path id="jdbc.classpath">
        <fileset dir="lib">
             <include name="mysql-connector-j-*.jar"/>
        </fileset>
    </path>

    <!-- ðŸ›  Compile target with JDBC support -->
    <target name="-post-compile">
        <javac srcdir="src" destdir="build/classes" classpathref="jdbc.classpath"/>
    </target>

    <!-- âœ… Run a test class (example) -->
    <target name="run-jdbc-test">
        <java classname="controller.JDBCConnectionTest" classpath="build/classes">
            <classpath refid="jdbc.classpath"/>
        </java>
    </target>

</project>
