<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.SignupCustomerController">

    <!-- ðŸŒˆ Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom, #2C3E50, #34495E);" prefWidth="220">
            <padding>
                <Insets top="60" right="20" bottom="60" left="20"/>
            </padding>

            <Label text="ðŸ“ Register" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Join our loyalty program!" wrapText="true" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </left>

    <!-- ðŸ§¾ Top Bar -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #16A085;" prefHeight="60" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="25" bottom="10" left="25"/>
            </padding>
            <Label text="Customer Registration" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- âœ¨ Signup Form -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #ECF0F1;">
            <padding>
                <Insets top="40" right="80" bottom="40" left="80"/>
            </padding>

            <Label text="Create a New Account" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <VBox alignment="CENTER_LEFT" spacing="6">
                <Label text="Full Name" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <TextField fx:id="nameField" promptText="Full Name" prefWidth="300"/>

                <Label text="Username" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <TextField fx:id="usernameField" promptText="Username" prefWidth="300"/>

                <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <TextField fx:id="emailField" promptText="Email" prefWidth="300"/>

                <Label text="Phone Number" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <TextField fx:id="phoneField" promptText="Phone Number" prefWidth="300"/>

                <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"/>
            </VBox>

            <Button text="Sign Up"
                    onAction="#handleRegister"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px;"
                    prefWidth="300"/>

            <Hyperlink text="Already have an account? Login" onAction="#goToLogin" style="-fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>
