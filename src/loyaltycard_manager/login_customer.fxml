<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginCustomerController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: linear-gradient(to bottom, #2C3E50, #34495E);" prefWidth="220">
            <padding>
                <Insets top="60" right="20" bottom="60" left="20"/>
            </padding>
            <Label text="🔐 Login" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Access your loyalty dashboard" wrapText="true" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #16A085;" prefHeight="60" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="25" bottom="10" left="25"/>
            </padding>
            <Label text="Customer Login" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Login Form -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #ECF0F1;">
            <padding>
                <Insets top="40" right="80" bottom="40" left="80"/>
            </padding>

            <Label text="Welcome Back!" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <TextField fx:id="usernameField" promptText="Username" prefWidth="300" style="-fx-font-size: 18px;"/>
            <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" style="-fx-font-size: 18px;"/>

            <!-- 🔴 Error Message Label -->
            <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 14px;"/>

            <Button text="Login"
                    onAction="#handleCustomerLogin"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8px;"
                    prefWidth="300"/>

            <Hyperlink text="Don't have an account? Register"
                       onAction="#goToSignup"
                       style="-fx-font-size: 14px;"/>

            <Hyperlink text="Login as Admin"
                       onAction="#switchToAdminLogin"
                       style="-fx-font-size: 14px;"/>
        </VBox>
    </center>
</BorderPane>
